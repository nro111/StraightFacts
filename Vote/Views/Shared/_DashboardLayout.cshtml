<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Straight Facts</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Content/full-slider.css")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/bootstrap.css")
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div style="padding-right:10%;">@Html.ActionLink("StraightFacts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</div>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="menu">
                    <li><a href="#">Home</a></li>
                    <li>
                        <a href="#s1">National Level Officials</a>
                        <ul class="submenu">
                            <li>@Html.ActionLink("Executive Branch", "Executive_Dashboard", "National_Level_OfficialsController")</li>
                            <li>@Html.ActionLink("Legislative Branch", "Legislative_Dashboard", "National_Level_OfficialsController")</li>
                            <li>@Html.ActionLink("Judicial Branch", "Judicial_Dashboard", "National_Level_OfficialsController")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#s1">State Level Officials</a>
                        <ul class="submenu">
                            <li>@Html.ActionLink("Executive Branch", "Executive_Dashboard", "State_Level_OfficialsController")</li>
                            <li>@Html.ActionLink("Legislative Branch", "Legislative_Dashboard", "State_Level_OfficialsController")</li>
                            <li>@Html.ActionLink("Judicial Branch", "Judicial_Dashboard", "State_Level_OfficialsController")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#s1">Local Level Officials</a>
                        <ul class="submenu">
                            <li>@Html.ActionLink("County", "CountyOfficials", "Local_Level_OfficialsController")</li>
                            <li>@Html.ActionLink("Municipality", "MunicipalityOfficials", "Local_Level_OfficialsController")</li>
                        </ul>
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
